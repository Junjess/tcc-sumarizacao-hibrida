{
  "manifest_version": 3,
  "name": "Resumo Híbrido",
  "version": "1.0",
  "description": "Destaca textos na página e envia para o backend gerar resumo.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["http://127.0.0.1:5000/"],
  "action": {
    "default_title": "Resumo Híbrido"
  },
  "background": {
    "service_worker": "background.js"
  }
}
